<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background21">

    <TextView
        android:id="@+id/tv_by_theme_detail"
        android:layout_width="match_parent"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:layout_height="30dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:paddingLeft="48dp"
        android:textSize="12sp"/>


    <Button
        android:id="@+id/btnActivate"
        android:layout_width="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:layout_height="55dp"
        android:alpha="0.8"
        android:text="Activate"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border_button"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_above="@id/btnActivate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/content_padding_normal"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:visibility="invisible" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_theme_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/indicator"
        android:layout_below="@id/tv_by_theme_detail" />

    <!--
    </RelativeLayout>
    </ScrollView>
    -->

</RelativeLayout>